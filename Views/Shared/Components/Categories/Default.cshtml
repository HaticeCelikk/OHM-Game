 @model List<Category>
 
 <div class="list-group">
    <a asp-controller="Game" asp-action="List" asp-route-id ="" class="list-group-item list-group-item-action">Tüm Ürünler</a>
    @foreach (var category in Model)  
    {
        <a asp-controller="Game" asp-action="List" asp-route-id ="@category.CategoryId" 
            class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==category.CategoryId.ToString()?"active":"")">@category.Name</a>
    }
</div>   